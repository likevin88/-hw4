<% if @current_user %>
  <p>
    <a href="/posts/new?place_id=<%= @place["id"]%>" class = "btn btn-primary"> New Post</a>
  </p>
<% end %>


<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>



<div class = "row">
  <% if @current_user %>
    <% for post in @posts %>
      <% if post["user_id"] == @current_user["id"] %>
        <div class="col-md-4">
            <h3><%= post["title"] %></h3>
            <p><%= post["posted_on"] %></p>
            <% if post.uploaded_image.attached? %>
              <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
            <% end %>
            <p><%= post["description"] %></p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<p>
  <a href="/places" class = "btn btn-secondary">Back to All Places</a>
</p>
